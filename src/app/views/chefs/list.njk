{% extends "../layout-admin.njk" %}

{% block head %}

<title>Admin - chefs</title>

{% endblock head %}

{% block content %}
<div class="admin">
    <h1>Gerenciar chefs</h1>

    <div class="wrapper-grid">
        {% for chef in chefs %}

            <div class="card-content">
                <span style="background-image: url({{chef.avatar_url}});"></span>
                <div>
                    <h2>{{chef.name}}</h2>
                    <a href="/admin/recipes/{{chef.id}}">Visualizar</a>
                </div>
            </div>

        {% endfor %}
    </div>
</div>
{% endblock content %}

