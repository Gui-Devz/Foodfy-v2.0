{% extends "./layout-session.njk" %}

{%block head%}
  <title>FoodFy - Login</title>
{%endblock head%}

{% block content %}
<div class="action"><p>Iniciar Sess√£o</p></div>
<form action="/users/login" method="post">
  <div class="fields">
      <div class="item">
        <div>Email</div>
        <div><input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email" ></div>
      </div>

      <div class="item">
        <div>Senha</div>
        <div><input type="password" name="password" value="{{user.password}}" placeholder="Digite a sua senha" ></div>
      </div>
  </div>

  <div class="buttons">
    <div>
      <p>Perdeu a senha?</p>
    </div>
    <div>
      <button type="submit">Acessar</button>
    </div>
  </div>
</form>
{% endblock content %}