<div class="fields">
    <div class="item">
        <div>Nome</div>
        <div><input type="text" name="name" value="{{chef.name}}" required></div>
    </div>
    <div class="item">
        <div>Avatar</div>
        <div>
            <input type="url" name="avatar_url" value="{{chef.avatar_url}}" required>
        </div>
    </div>
    <div class="chef-avatar">
      <input
        class="avatar-image"
        type="file"
        name="avatar"
        style="display:none"
        accept="images/*"
        onchange="uploadChefAvatar.handleFile(event)">
      <p class="avatar" onclick="activatingInputFiles.activate()">Enviar Avatar</p>
      <div class="preview-images"></div>
    </div>
</div>