<div class="fields">
    <div class="item">
        <div>Imagem da receita</div>
        <div><input type="url" name="image" value="{{recipe.image}}" required></div>
    </div>
    <div class="item">
        <div>Nome da receita</div>
        <div><input type="text" name="title" value="{{recipe.title}}" required></div>
    </div>
    <div class="item">
        <div>Autor da receita</div>
        <div>
            <select name="chef_id" id="chefs" required>
                <option value="">Selecione um chef</option>
                {% for chef in chefs %}
                    <option value="{{chef.id}}" {% if chef.id == recipe.chef_id %}selected{% endif %}>
                        {{chef.name}}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="item">
        <div>Ingredientes</div>
        <div class="ingredients">
            {% if recipe.ingredients %}
                {% for ingredient in recipe.ingredients %}
                    <div class="ingredient">
                        <input type="text" name="ingredients[]" value="{{ingredient}}" >
                    </div>
                {% endfor %}
            {% else %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]">
                </div>
            {% endif %}
        </div>
        <button class="add-ingredient" type="button">Adicionar novo ingrediente</button>
    </div>
    <div class="item">
        <div>Modo de preparo</div>
        <div class="steps">
            {% if recipe.preparation %}
                {% for step in recipe.preparation %}
                    <div class="step">
                        <input type="text" name="preparation[]" value="{{step}}" >
                    </div>
                {% endfor %}
            {%else%}
                <div class="step">
                    <input type="text" name="preparation[]" >
                </div>
            {% endif %}
        </div>
        <button class="add-step" type="button">Adicionar novo passo</button>
    </div>
    <div class="item">
        <div>Informações adicionais</div>
        <div><textarea type="text" name="information">{{recipe.information}}</textarea></div>
    </div>
</div>